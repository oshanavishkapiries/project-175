# ================================
# LLM Provider Configuration
# ================================

# Select default LLM provider: gemini, cerebras, ollama, openrouter
DEFAULT_LLM=gemini

# ================================
# Gemini Configuration
# ================================
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash
GEMINI_TEMPERATURE=0.2
GEMINI_MAX_TOKENS=2048

# ================================
# Cerebras Configuration
# ================================
CEREBRAS_API_KEY=your_cerebras_api_key_here
CEREBRAS_MODEL=llama3.1-8b
CEREBRAS_TEMPERATURE=0.2
CEREBRAS_MAX_TOKENS=8192

# ================================
# Ollama Local Configuration
# ================================
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2
OLLAMA_TEMPERATURE=0.2
OLLAMA_MAX_TOKENS=4096

# ================================
# OpenRouter Configuration
# ================================
# Get your API key from https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here
# Popular models: openai/gpt-4o, anthropic/claude-3.5-sonnet, google/gemini-pro
OPENROUTER_MODEL=openai/gpt-4o-mini
OPENROUTER_TEMPERATURE=0.2
OPENROUTER_MAX_TOKENS=4096
OPENROUTER_SITE_URL=http://localhost:3000
OPENROUTER_SITE_NAME=Browser Agent

# ================================
# Agent Configuration
# ================================
AGENT_MAX_STEPS=50
AGENT_WAIT_BETWEEN_ACTIONS=1000
AGENT_VERBOSE=true

# ================================
# Browser Configuration
# ================================
CHROME_PATH=C:/Program Files/Google/Chrome/Application/chrome.exe
HEADLESS=false

# Persistent browser profile directory (optional)
# Saves cookies, history, localStorage like a real browser
# Leave empty to use default: data/browser-profile
BROWSER_PROFILE_DIR=

# Custom Data Directory (optional)
# Controls where logs, temp files, and browser profiles are stored
# Defaults to: core/data
# Custom Data Directory (optional)
# Controls where logs, temp files, and browser profiles are stored
# Defaults to: core/data
DATA_DIR=

# ================================
# Rate Limiter Configuration
# ================================
# Enable/disable rate limiting (default: true)
RATE_LIMIT_ENABLED=true

# Requests per minute (default: 60)
RATE_LIMIT_RPM=4

# Requests per day (default: 1500)
RATE_LIMIT_RPD=20

# Minimum delay between requests in ms (default: 100)
RATE_LIMIT_MIN_DELAY=100

# Max retries on rate limit error (default: 3)
RATE_LIMIT_MAX_RETRIES=1

# Initial retry delay in ms (default: 1000)
RATE_LIMIT_RETRY_DELAY=180

# Retry delay multiplier for exponential backoff (default: 2)
RATE_LIMIT_RETRY_MULTIPLIER=2
